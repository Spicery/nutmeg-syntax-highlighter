{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Nutmeg",
	"scopeName": "source.nutmeg",
	"firstLineMatch": "^#![^ ]*\\bnutmeg\\b.*$",
	"foldingStartMarker": "begin",
	"foldingStopMarker": "end",

	"patterns": [
		{ "include": "#statements" },
		{ "include": "#eolcomment" },
		{ "include": "#keywords" }
	],
	"repository": {
		"statements": {
			"patterns": [
				{ "include": "#dqstring" },
				{ "include": "#sqstring" },
				{ "include": "#generic-tag" },
				{ "include": "#array" },
				{ "include": "#dqstring" },
				{ "include": "#sqstring" },
				{ "include": "#number" },
				{ "include": "#eolcomment" }
			]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.nutmeg",
				"match": "\\b(def|enddef|if|then|else|endif|while|for|do|endfor|return|begin|end|let|in|var)\\b"
			}]
		},
		"dqstring": {
			"name": "string.quoted.double.nutmeg",
			"begin": "\"",
			"end": "\"",
			"patterns": [ { "include": "#escape" } ]
		},
		"sqstring": {
			"name": "string.quoted.single.nutmeg",
			"begin": "'",
			"end": "'",
			"patterns": [ { "include": "#escape" } ]
		},
		"escape": {
			"name": "constant.character.escape.nutmeg",
			"patterns": [
				{ 
					"name": "constant.character.escape.nutmeg",
					"match": "\\\\(?:[bfnrt]|u\\h{4})"
				},
				{ 
					"name": "invalid.illegal.character.escape.nutmeg", 
					"match": "\\\\[^ubfnrt]" 
				}
			]
		},
		"eolcomment": {
			"name": "comment.line.triplehash.nutmeg",
			"match": "###.*$"
		},
		"statementsep": {
   			"match": ";",
	    	"name": "punctuation.separator.delimiter.nutmeg"
		}
	}
}
